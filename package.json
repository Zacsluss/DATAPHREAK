{
  "name": "dataphreak",
  "version": "1.0.0",
  "type": "module",
  "description": "Enterprise Data Analysis In Your Browser - 100% Offline",
  "main": "dataphreak.html",
  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "build": "node scripts/build.js",
    "dev": "npm run build && npm run serve",
    "serve": "python -m http.server 8080",
    "validate": "npm run lint && npm test",
    "docs": "jsdoc src/js/utils/*.js -d docs/api -R README.md",
    "docs:md": "jsdoc2md src/js/utils/*.js > docs/api/API_REFERENCE.md",
    "prepare": "husky"
  },
  "keywords": [
    "data-analysis",
    "csv",
    "excel",
    "offline",
    "privacy",
    "data-quality"
  ],
  "author": "Zachary Sluss",
  "license": "MIT",
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "happy-dom": "^20.0.8",
    "husky": "^9.1.7",
    "jsdoc": "^4.0.5",
    "jsdoc-to-markdown": "^9.1.3",
    "lint-staged": "^16.2.6",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zacsluss/dataphreak.git"
  },
  "bugs": {
    "url": "https://github.com/Zacsluss/dataphreak/issues"
  },
  "homepage": "https://zacsluss.github.io/dataphreak/",
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "vitest related --run"
    ]
  }
}
